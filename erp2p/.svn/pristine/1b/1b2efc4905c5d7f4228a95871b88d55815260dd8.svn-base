  <script>
 var netState = 1;
apiready = function () {
  var connectionType = api.connectionType;
  if(connectionType =="none"){
    netState = 0;
  }
  api.addEventListener({
      name:'online'
  },function(ret,err){
      var connectionType = ret.connectionType;
      location.href="index.html";
      
  });
  api.addEventListener({
    name:'offline'
  },function(ret,err){
      var connectionType = ret.connectionType;
      netState = 0;
      //alert(connectionType);    
  })
} 
  jQuery(document).ready(function($) {
    $(".nav-my").on('click',function(event) {
      event.preventDefault();
      /* Act on the event */
         $.ajaxSetup({
          url: 'http://app.erp2p.com/down/action/company/indexAction.php',
          type: 'GET',
          async: false,
          dataType : "jsonp",
          jsonp: "callbackparam",//服务端用于接收callback调用的function名的参数
          jsonpCallback:"success_jsonpCallback",//callback的function名称 
        }); 
        if(netState ==1){
          $.ajax({
              data: {mode: 1},
              success : function(data){
                if(data.error==1){
                  location.href="../user/login.html";
                }
                if(data.error==0){
                  location.href="../user/index.html";
                }
              },
              error : function(){
                alert("系统错误");
              }
          });
        }else{
          alert("网络异常");
        }    
    });

    $(".er-call>ul>li:eq(0)").on('click',function(event) {
      event.preventDefault();
      /* Act on the event */
      var tel = $(this).children('span').html();
      num = tel.replace("-","").replace("-","");
      api.call({
          type: 'tel_prompt',
          number: num
      });
    });
    $(".er-call>ul>li:eq(1)").on('click',function(event) {
      event.preventDefault();

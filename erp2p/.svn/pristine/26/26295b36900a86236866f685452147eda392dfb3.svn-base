          jsonpCallback:"success_jsonpCallback",//callback的function名称 
        }); 
         if(netState ==1){
           $.ajax({
              data: {mode: 1},
              success : function(data){
                if(data.error==1){
                  location.href="../user/login.html";
                }
                if(data.error==0){
                  location.href="../user/index.html";
                }
              },
              error : function(){
                alert("系统错误");
